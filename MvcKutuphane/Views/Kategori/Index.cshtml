@using MvcKutuphane.Models.Entity
@model List<TblKatagori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.KategoriId</td>
            <td>@ktg.Ad</td>
            <td><a href="~/Kategori/KategoriSil/@ktg.KategoriId" class="btn btn-danger">Sil</a></td>
            <td><a href="~/Kategori/KategoriGetir/@ktg.KategoriId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="~/Kategori/KategoriEkle/" class="btn btn-primary"> Yeni Kategori Ekle</a> 
