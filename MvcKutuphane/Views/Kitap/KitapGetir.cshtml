@model MvcKutuphane.Models.Entity.TblKitap
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-top:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Kitap ID</label>
            @Html.TextBoxFor(y => y.KitapId, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(y => y.KitapAdi, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.TblKatagori.KategoriId, (List<SelectListItem>)ViewBag.Katagori, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar </label>
            @Html.DropDownListFor(i => i.TblYazar.YazarId, (List<SelectListItem>)ViewBag.Yazar, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Basım Yılı </label>
            @Html.TextBoxFor(y => y.BasimYil, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yayın Evi </label>
            @Html.TextBoxFor(y => y.YayinEvi, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Sayfa Sayısı </label>
            @Html.TextBoxFor(y => y.Sayfa, new { @class = "form-control" })
        </div>

        <button class="btn btn-warning"> Kitap bilgilerini güncelle</button>
    </div>

}
