@using MvcKutuphane.Models.Entity
@model List<TblYazar>
 @{ 

     
 }

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered">
    <tr>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ID</th>
        <th>DETAY</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var Yazar in Model)
    {
        <tr>
            <td>@Yazar.YazarAdi</td>
            <td>@Yazar.YazarSoyad</td>
            <td>@Yazar.YazarId</td>
            <td>@Yazar.YazarDetay</td>
            <td>@Html.ActionLink("Sil","YazarSil",new {id = Yazar.YazarId },new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musun?')"  })</td>
            <td><a href="~/Yazar/YazarGetir/@Yazar.YazarId" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>
<a class="btn btn-primary" href="~/Yazar/YazarEkle/"> Yeni Yazar Ekle</a>

